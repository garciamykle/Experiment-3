#include <iostream>
#include <iomanip>

using namespace std;

int main () 

{

   double PA[7]; 
   double PB[7]; 
   double PC[7]; 
   double A,B,C;
   
   cout<<"Enter the temperature of Province A for the past week :"  <<endl;
       
  for ( int x = 1; x <=7; x++ ) 
	{
    	cout<<"Province A, Day " << x << ": ";
        cin >> PA[x];
   }
 cout<<"Enter the temperature of Province B for the past week :"  <<endl;
   for ( int x = 1; x <=7; x++ ) 
   {
   	cout<<"Province B, Day " << x << ": ";
	cin >> PB[x];
   }
   
    cout<<"Enter the temperature of Province C for the past week :"  <<endl;
   for ( int x = 1; x <=7; x++ ) 
   {
	cout<<"Province C, Day " << x << ": ";
	cin >> PC[x];
   }
   
   cout << endl << "The temperatures of Province A, Province B, and Province C within a week :" << endl;
 
   for ( int y = 1; y <= 7; y++ )
    {
      A = PA[y];
      cout <<"Province A, Day "<< y <<" = "<< A << endl;
   	}

   for ( int y = 1; y <= 7; y++ ) 
   {
      B = PB[y];
   	  cout <<"Province B, Day "<< y <<" = "<< B << endl;
   }

   for ( int y = 1; y <= 7; y++ ) 
   {
    C = PC[y];
    cout <<"Province C, Day "<< y <<" = "<< C<< endl;
   }
 

 return 0;

}
